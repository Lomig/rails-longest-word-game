<div class="container">
  <h1>The Longest Word</h1>

  <div class="letters">
    <% @letters.each do |letter| %>
      <div class="letter"><div><%= letter %></div></div>
    <% end %>
  </div>
  <form action="score" method="post" accept-charset="utf-8">
    <p>What's the longest word you can find?</p>
    <div class="inline">
      <input type="text" name="word" value="" id="word">
      <%= hidden_field_tag :letters, @letters %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <button type="submit">Play</button>
    </div>
  </form>
</div>
